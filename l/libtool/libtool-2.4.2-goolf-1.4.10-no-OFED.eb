easyblock = 'ConfigureMake'

name = 'libtool'
version = '2.4.2'

homepage = 'http://www.gnu.org/software/libtool'
description = """GNU libtool is a generic library support script. Libtool hides the complexity of using shared libraries
behind a consistent, portable interface."""
toolchain = {'version': '1.4.10-no-OFED', 'name': 'goolf'} # tweaked by EasyBuild (was: {'name': 'goolf', 'version': '1.4.10'})

sources = [SOURCELOWER_TAR_GZ]
source_urls = [GNU_SOURCE]

moduleclass = 'lib'
